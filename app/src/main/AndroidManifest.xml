<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.e_covid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ECovid">

        <!-- Menu Page -->
        <activity
            android:name=".View.Login.User_MenuPage"
            android:exported="false" />
        <activity
            android:name=".View.Login.MOH_MenuPage"
            android:exported="false" />
        <activity
            android:name=".View.Login.Admin_MenuPage"
            android:exported="false" />


        <!-- Controller -->
        <activity
            android:name=".Controller.Vaccination.VaccinationController"
            android:exported="false" />

        <!-- View Login package -->
        <activity
            android:name=".View.Login.AdminLogin"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.Login.LoginActivity"
            android:exported="false" />

        <!-- View User Quarantine package -->
        <activity
            android:name=".View.UserQuarantine.DailyQuestions"
            android:exported="false" />
        <activity
            android:name=".View.UserQuarantine.CenterQuarantineData"
            android:exported="false" />
        <activity
            android:name=".View.UserQuarantine.HomeLocation"
            android:exported="false" />
        <activity
            android:name=".View.UserQuarantine.HomeQuarantineData"
            android:exported="false" />
        <activity
            android:name=".View.UserQuarantine.QuarantineDetails"
            android:exported="false" />
        <activity
            android:name=".View.UserQuarantine.QuarantineINFO"
            android:exported="false" />
        <activity
            android:name=".View.UserQuarantine.QuarantineType"
            android:exported="false" />
        <activity
            android:name=".View.UserQuarantine.UserRegistration"
            android:exported="false" />
        <activity
            android:name=".View.UserQuarantine.CenterQuarantineOptions"
            android:exported="false" />

        <!-- View Quarantine Center package -->
        <activity
            android:name=".View.QuarantineCenter.Admin_ViewQuarantineCenter"
            android:exported="false" />
        <activity
            android:name=".View.QuarantineCenter.Admin_AddQuarantineCenter"
            android:exported="false" />
        <activity
            android:name=".View.QuarantineCenter.Admin_QuarantineCenterMenu"
            android:exported="false" />
        <activity
            android:name=".View.QuarantineCenter.User_SearchQuarantineCenter"
            android:exported="false" />

        <!-- View Vaccination package -->

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
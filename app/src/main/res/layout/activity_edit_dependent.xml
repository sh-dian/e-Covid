<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Savechanges"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditDependent">

    <RelativeLayout
        android:id="@+id/rootRL"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="264dp"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="753dp"
            android:background="@null"
            android:ems="10"
            android:text="MANAGE DEPENDENT"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.722"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499" />

        <EditText
            android:layout_width="234dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="76dp"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="82dp"
            android:layout_marginBottom="653dp"
            android:background="@null"
            android:ems="10"
            android:text="EDIT DEPENDENTS"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="138dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="204dp"
            android:layout_marginEnd="230dp"
            android:layout_marginBottom="565dp"
            android:background="@null"
            android:text="Full Name"
            android:textSize="23dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.722"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.419" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="116dp"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="348dp"
            android:layout_marginEnd="254dp"
            android:layout_marginBottom="428dp"
            android:background="@null"
            android:ems="10"
            android:text="Relation"
            android:textSize="23dp" />

        <android.support.design.widget.TextInputEditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="266dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="522dp"
            android:background="@drawable/radius"
            android:hint=" Name"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="#FFFFFF" />

        <Button
            android:id="@+id/SaveChanges"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="117dp"
            android:layout_marginTop="480dp"
            android:layout_marginEnd="125dp"
            android:layout_marginBottom="297dp"
            android:background="@drawable/radius"
            android:text="Save Changes"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/textInputEditText"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/radius"
        android:hint=" Relation"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/rootRL"
        app:layout_constraintEnd_toEndOf="@+id/rootRL"
        app:layout_constraintStart_toStartOf="@+id/rootRL"
        app:layout_constraintTop_toTopOf="@+id/rootRL" />

</android.support.constraint.ConstraintLayout>
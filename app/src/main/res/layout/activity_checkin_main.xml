<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/covid_cases_checkin"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="365dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="90dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="131dp"
            android:layout_marginBottom="14dp"
            android:text="History\n\n -Latest Check in/out"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="655dp"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/button4"
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="#031B3F"
            android:backgroundTint="#031B3F"
            android:gravity="center"
            android:text="Gerai Pak Abu Kuantan "
            android:textColor="#000000"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="529dp"
            tools:visibility="visible" />

        <Button
            android:id="@+id/button5"
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="#031B3F"
            android:backgroundTint="#031B3F"
            android:gravity="center"
            android:layout_marginStart="130dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="131dp"
            android:layout_marginBottom="14dp"
            android:text="Gerai Pak Abu Kuantan "
            android:textColor="#000000"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="365dp"
            tools:visibility="visible" />

        <Button
            android:id="@+id/button2"
            android:layout_width="391dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:text="Check-in"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="419dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="338dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="171dp"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <Button
        android:id="@+id/button7"
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:text="NURAIN BINTI WAN\n960507-01-0323\nMALAYSIA CITIZEN"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="56dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button8"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:text="Covid-19 Risk Status\nLow Risk"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="192dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button9"
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:text="Covid-19 Vaccination Status\nFULLY VACCINATED"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="192dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="79dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="BACK"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>